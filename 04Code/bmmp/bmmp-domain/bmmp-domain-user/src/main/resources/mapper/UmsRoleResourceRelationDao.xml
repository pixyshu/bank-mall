<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suue.bmmp.dao.UmsRoleResourceRelationDao">

    <resultMap type="com.suue.bmmp.entity.UmsRoleResourceRelation" id="UmsRoleResourceRelationMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="resourceId" column="resource_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UmsRoleResourceRelationMap">
        select
          id, role_id, resource_id
        from ums_role_resource_relation
        where id = #{id}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from ums_role_resource_relation
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="resourceId != null">
                and resource_id = #{resourceId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into ums_role_resource_relation(role_id, resource_id)
        values (#{roleId}, #{resourceId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into ums_role_resource_relation(role_id, resource_id)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.roleId}, #{entity.resourceId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into ums_role_resource_relation(role_id, resource_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleId}, #{entity.resourceId})
        </foreach>
        on duplicate key update
        role_id = values(role_id),
        resource_id = values(resource_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update ums_role_resource_relation
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="resourceId != null">
                resource_id = #{resourceId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from ums_role_resource_relation where id = #{id}
    </delete>

<!--条件查询所有数据-->
    <select id="queryAll" resultMap="UmsRoleResourceRelationMap">
        select
          id, role_id, resource_id
        from ums_role_resource_relation
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="resourceId != null">
                and resource_id = #{resourceId}
            </if>
        </where>
    </select>
    <delete id="delByRoleId">
        delete
        from ums_role_resource_relation
        where role_id = #{roleId,jdbcType=NUMERIC}
    </delete>
</mapper>


