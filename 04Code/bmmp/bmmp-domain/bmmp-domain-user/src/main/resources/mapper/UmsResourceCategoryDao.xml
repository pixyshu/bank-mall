<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suue.bmmp.dao.UmsResourceCategoryDao">

    <resultMap type="com.suue.bmmp.entity.UmsResourceCategory" id="UmsResourceCategoryMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UmsResourceCategoryMap">
        select
          id, create_time, name, sort
        from ums_resource_category
        where id = #{id}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from ums_resource_category
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into ums_resource_category(create_time, name, sort)
        values (#{createTime}, #{name}, #{sort})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into ums_resource_category(create_time, name, sort)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.createTime}, #{entity.name}, #{entity.sort})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into ums_resource_category(create_time, name, sort)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.createTime}, #{entity.name}, #{entity.sort})
        </foreach>
        on duplicate key update
        create_time = values(create_time),
        name = values(name),
        sort = values(sort)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update ums_resource_category
        <set>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from ums_resource_category where id = #{id}
    </delete>

<!--条件查询所有数据-->
    <select id="queryAll" resultMap="UmsResourceCategoryMap">
        select
          id, create_time, name, sort
        from ums_resource_category
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
        </where>
    </select>
</mapper>


